<div class="top-header container row my-2">
  <div class="row col-md-8">
    <div class="col-md-4">
      <div class="d-flex align-items-center gap-2">
        <h5>New Assessment</h5></p>
      </div>
      <div class="d-flex align-items-center gap-2 mt-0">
        <i class="bx bx-notepad fs-4"></i>
        <p class="m-0"><%= @questions.length %> questions</p>
      </div>
      <div class="d-flex align-items-center gap-2 mt-2">
        <i class='bx bx-calendar fs-4'></i>
        <p class="m-0"><%= getDateString(@answer.present? ? @answer.submitted_at : DateTime.now) %></p>
      </div>
    </div>

    <div class="col-md-8">
      <div class="d-flex align-items-center gap-2 mt-4" style="margin-top: 2rem !important">
        <span class="badge rounded-circle badge-center bg-success p-2">
          <span class="visually-hidden">1</span>
        </span>
        <p class="m-0">All questions attended</p>
      </div>
      <div class="d-flex align-items-center gap-2 mt-2">
        <span class="badge rounded-circle badge-center bg-danger p-2">
          <span class="visually-hidden">1</span>
        </span>
        <p class="m-0">Number of questions not attended</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="d-flex align-items-center gap-2" style="float: right">
      <% if params[:action] == "view_assessment" %>
        <%= link_to 'Edit', take_assessment_url, class: "btn btn-primary mx-1 #{current_user.has_assessment_status? ? 'vm-none' : ''}" %>
      <% end %>
      <button class="btn btn-primary mx-1 save_assessment <%= current_user.has_assessment_status? ? 'vm-none' : '' %>">Save</button>
      <button class="btn btn-primary mx-1 submit_assessment <%= current_user.has_assessment_status? ? 'vm-none' : '' %>" data-bs-toggle="modal" data-bs-target="#modalSubmit">Submit</button>
    </div>
  </div>
</div>
