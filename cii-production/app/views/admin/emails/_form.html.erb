<div class="card">
  <div class="card-body col-md-10 offset-1">
    <%= form_with(model: email, local: true, html: { class: "mb-3" }) do |f|  %>

      <div class="col-md-12 row g-3 flex-column align-items-center">
        <%= render "shared/error_messages", resource: email %>

        <div class="mb-3 col-md-6">
          <label class="form-label">Email Title</label>
          <%= f.text_field :email_title, class: "form-control", placeholder: "Enter Email Title" %>
        </div>
        <div class="mb-3 col-md-6">
          <label class="form-label">Email Content</label>
          <%= f.text_area :email_content, class: "form-control", rows: "5", placeholder: "Enter Email Content" %>
        </div>
      </div>

      <div class="col-md-4 offset-4">
        <center>
          <div class="row">
            <div class="col-md-12" style="margin-top: 10px">
              <%= f.submit class: "btn btn-primary" %>
              <%= link_to 'Cancel', url_for(:back), class: "btn btn-secondary", style: "margin-left: 10px" %>
            </div>
          </div>
        </center>
      </div>
    <% end %>
  </div>
</div>
